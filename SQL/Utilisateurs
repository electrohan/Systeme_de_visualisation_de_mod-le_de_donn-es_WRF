-- Database: Utiisateurs

-- DROP DATABASE IF EXISTS "Utiisateurs";

CREATE DATABASE "Utiisateurs"
    WITH
    OWNER = postgres
    ENCODING = 'UTF8'
    LC_COLLATE = 'fr_FR.UTF-8'
    LC_CTYPE = 'fr_FR.UTF-8'
    TABLESPACE = pg_default
    CONNECTION LIMIT = -1
    IS_TEMPLATE = False;

COMMENT ON DATABASE "Utiisateurs"
    IS 'cette base de données va contenir les information de connexion des différentrs prévisionniste de la sodexam';
	
	CREATE TABLE PREVISIONNISTES(
		id_previ SERIAL PRIMARY KEY,
		matricule_previ VARCHAR(10) NOT NULL,
		code_previ VARCHAR(10) NOT NULL
	)
	
	SELECT * FROM PREVISIONNISTES;